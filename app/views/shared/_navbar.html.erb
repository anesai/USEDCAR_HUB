    <input class="form-control string required mx-4" placeholder="Search any car" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-primary">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>
