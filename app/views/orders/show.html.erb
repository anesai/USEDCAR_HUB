<section class="h-100 h-custom" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card border-top border-bottom border-3" style="border-color: #f37a27 !important;">
          <div class="card-body p-5">
            <h2>Thank you for your order <%= current_user.email %>!</h2>
            <p class="lead fw-bold mb-5" style="color: #f37a27;">Order Details</p>

            <div class="row">
              <div class="col mb-3">
                <p class="small text-muted mb-1">Date</p>
                <!--date generator-->
                <p><%= Time.now.strftime("%d/%m/%Y %T") %></p>
              </div>
              <div class="col mb-3">
                <p class="small text-muted mb-1">Order No.</p>
                <!--order no-->
                <% order_num = 13579113 %>
                <!--add order no. with order id for uniqueness-->
                <p><%= order_num + @order.id %></p>
              </div>
            </div>

            <div class="mx-n5 px-5 py-4" style="background-color: #f2f2f2;">
              <div class="row">
                <div class="col-md-8 col-lg-9">
                  <p><%= "#{@order.car.brand} #{@order.car.model}" %></p>
                </div>
                <div class="col-md-4 col-lg-3">
                  <% car_price = @order.car.price - (@order.car.price * 0.19) %>
                  <p>€<%= car_price %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-8 col-lg-9">
                  <p class="mb-0">Tax</p>
                </div>
                <div class="col-md-4 col-lg-3">
                  <p class="mb-0">€<%= @order.car.price * 0.19%></p>
                </div>
              </div>
            </div>

            <div class="row my-4">
              <div class="col-md-4 offset-md-8 col-lg-3 offset-lg-9">
                <% total = (@order.car.price)  %>
                <p class="lead fw-bold mb-0" style="color: #f37a27;">€<%= total %></p>
              </div>
            </div>

            <p class="lead fw-bold mb-4 pb-2" style="color: #f37a27;">Order Status</p>

            <div class="row">
              <div class="col-lg-12">

                <div class="horizontal-timeline">

                  <ul class="list-inline items d-flex justify-content-between">
                    <li class="list-inline-item items-list">
                    <!--Order status logic-->
                      <% if Time.now - @order.created_at < 20 %>
                        <% order_status = "Processing..." %>
                        <% else %>
                        <% order_status = "Congratulations, your car is on the way!" %>
                      <% end %>
                      <p class="py-1 px-2 rounded text-white" style="background-color: #f37a27;"><%= order_status %></p
                        class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">
                    </li>
                  </ul>

                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
